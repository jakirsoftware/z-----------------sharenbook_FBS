<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/conversation"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:paddingLeft="15dp"
    android:paddingStart="15dp"
    android:paddingRight="35dp"
    android:paddingEnd="35dp"
    android:clipToPadding="false"
    android:clickable="true">

    <ImageView
        android:id="@+id/mychats_avatar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_person_black_135dp"
        />

    <TextView
        android:id="@+id/mychats_username"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:textColor="@color/transparentBlack"
        android:layout_toRightOf="@+id/mychats_avatar"
        android:layout_toEndOf="@+id/mychats_avatar"
        android:layout_alignTop="@+id/mychats_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mychats_message_body"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_below="@+id/mychats_username"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:layout_toRightOf="@+id/mychats_avatar"
        android:layout_toEndOf="@+id/mychats_avatar"
        android:paddingEnd="70dp"
        android:paddingRight="70dp"
        android:elevation="2dp"
        android:textSize="14sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mychats_date"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBaseline="@id/mychats_username"
        android:textSize="12sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/mychats_inboxCounter"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@id/mychats_date"
        android:layout_alignLeft="@id/mychats_date"
        android:layout_below="@id/mychats_date"
        android:layout_marginTop="4dp"
        android:background="@drawable/chat_inbox_counter_shape"
        android:padding="5dp"
        android:clipToPadding="true"
        android:textSize="12sp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/white"
        />

</RelativeLayout>