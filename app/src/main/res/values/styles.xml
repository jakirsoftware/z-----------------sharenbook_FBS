<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- Customize Material Button -->
        <item name="colorButtonNormal">@color/colorAccent</item>

        <item name="cardViewStyle">@style/CardView</item>

    </style>

    <style name="TextViewHeadingBig">

        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">@dimen/titlebig</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/textlines</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="TextViewHeading">

        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/textlines</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>


    <style name="TextViewContent">

        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:textColor">@color/darkGrey</item>
        <item name="android:textSize">@dimen/paragraph</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">16dp</item>

    </style>

    <style name="NavigationDrawerStyle">
        <item name="android:paddingLeft">20dp</item>
    </style>
